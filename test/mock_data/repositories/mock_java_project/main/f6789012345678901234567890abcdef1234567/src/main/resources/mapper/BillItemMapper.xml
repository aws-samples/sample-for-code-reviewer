<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="demo.great.dao.mapper.BillItemMapper">
    
    <resultMap id="BaseResultMap" type="demo.great.entity.BillItem">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="description" property="description" />
        <result column="amount" property="amount" />
        <result column="bill_date" property="billDate" />
        <result column="category_id" property="categoryId" />
        <result column="user_id" property="userId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM bill_item WHERE id = #{id}
    </select>
    
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM bill_item ORDER BY bill_date DESC
    </select>
    
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT * FROM bill_item WHERE user_id = #{userId} ORDER BY bill_date DESC
    </select>
    
    <insert id="insert" parameterType="demo.great.entity.BillItem">
        INSERT INTO bill_item (title, description, amount, bill_date, category_id, user_id, create_time)
        VALUES (#{title}, #{description}, #{amount}, #{billDate}, #{categoryId}, #{userId}, NOW())
    </insert>
    
</mapper>