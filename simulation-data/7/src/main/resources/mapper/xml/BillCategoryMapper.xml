<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.great.dao.mapper.BillCategoryMapper">
    <resultMap id="categoryResultMap" type="demo.great.entity.BillCategory">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <insert id="createCategory" parameterType="demo.great.entity.BillCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO great_bill_category (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <update id="updateCategory" parameterType="demo.great.entity.BillCategory">
        UPDATE great_bill_category
        SET name = #{name},
            description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteCategory" parameterType="int">
        DELETE FROM great_bill_category WHERE id = #{id}
    </delete>

    <select id="loadCategory" parameterType="int" resultMap="categoryResultMap">
        SELECT * FROM great_bill_category WHERE id = #{id}
    </select>

    <select id="listCategories" resultMap="categoryResultMap">
        SELECT * FROM great_bill_category
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>
</mapper>
